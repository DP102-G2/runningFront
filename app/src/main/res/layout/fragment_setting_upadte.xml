<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btUpdate"
                style="@style/bt_radius_main"
                android:layout_width="108dp"
                android:layout_height="36dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="80dp"
                android:text="確認修改"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

            <Button
                android:id="@+id/btSignUp"
                style="@style/bt_radius_main"
                android:layout_width="108dp"
                android:layout_height="36dp"
                android:text="註冊帳號"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/btUpdate"
                app:layout_constraintStart_toEndOf="@+id/btUpdate"
                app:layout_constraintTop_toTopOf="@+id/btUpdate" />

            <EditText
                android:id="@+id/etId"
                style="@style/type_radius"
                android:layout_width="316dp"
                android:layout_height="35dp"
                android:layout_marginTop="50dp"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                tools:text="user_id" />

            <EditText
                android:id="@+id/etPW"
                style="@style/type_radius"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginTop="24dp"

                android:ems="10"
                android:inputType="textPassword"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="@+id/etId"
                app:layout_constraintStart_toStartOf="@+id/etId"
                app:layout_constraintTop_toBottomOf="@+id/etId"
                tools:text="user_pw" />

            <EditText
                android:id="@+id/etName"
                style="@style/type_radius"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="@+id/etPW"
                app:layout_constraintStart_toEndOf="@+id/etPW"
                app:layout_constraintStart_toStartOf="@+id/etPW"
                app:layout_constraintTop_toBottomOf="@+id/etPW"
                tools:text="user_name" />

            <EditText
                android:id="@+id/etEmail"
                style="@style/type_radius"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="@+id/etName"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/etName"
                app:layout_constraintTop_toBottomOf="@+id/etName"
                tools:text="user_email" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="60dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@drawable/user_no_image" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@+id/etEmail"
                app:layout_constraintTop_toBottomOf="@+id/etEmail">

                <RadioButton
                    android:id="@+id/rbPublic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="公開" />

                <RadioButton
                    android:id="@+id/rbPrivate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="非公開" />

            </RadioGroup>

            <TextView
                android:id="@+id/tvAt"
                style="@style/tv_warning_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Setting Update Fragment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>