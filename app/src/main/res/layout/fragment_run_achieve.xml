                <TextView
                    android:id="@+id/tvachieve_value6"
                    android:layout_width="93dp"
                    android:layout_height="36dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvunit6"
                    android:layout_width="93dp"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:text="次" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
