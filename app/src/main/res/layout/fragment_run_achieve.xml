<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/ivachieve1"
                    android:layout_width="93dp"
                    android:layout_height="101dp"
                    android:padding="6dp"
                    app:srcCompat="@drawable/ic_01" />

                <TextView
                    android:id="@+id/tvachieve_no1"
                    android:layout_width="93dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="跑步最遠距離"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvachieve_value1"
                    android:layout_width="93dp"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvunit1"
                    android:layout_width="93dp"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:text="km"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/ivachieve2"
                    android:layout_width="93dp"
                    android:layout_height="101dp"
                    android:padding="6dp"
                    app:srcCompat="@drawable/ic_02" />

                <TextView
                    android:id="@+id/tvachieve_no2"
                    android:layout_width="93dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="跑步最久距離"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvachieve_value2"
                    android:layout_width="93dp"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvunit2"
                    android:layout_width="93dp"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:text="km"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/ivachieve3"
                    android:layout_width="93dp"
                    android:layout_height="101dp"
                    android:padding="6dp"
                    app:srcCompat="@drawable/ic_03" />

